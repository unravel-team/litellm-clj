{:paths ["src" "resources" "test"]
 
 :deps {org.clojure/clojure {:mvn/version "1.11.1"}
        
        ;; HTTP & JSON
        hato/hato {:mvn/version "0.9.0"}
        cheshire/cheshire {:mvn/version "5.12.0"}
        
        ;; Thread Management
        com.climate/claypoole {:mvn/version "1.1.4"}
        
        ;; Configuration
        aero/aero {:mvn/version "1.1.6"}
        
        ;; Caching
        org.clojure/core.cache {:mvn/version "1.0.225"}
        com.taoensso/carmine {:mvn/version "3.2.0"}
        
        ;; Logging
        ch.qos.logback/logback-classic {:mvn/version "1.4.11"}
        org.clojure/tools.logging {:mvn/version "1.2.4"}
        
        ;; Async
        org.clojure/core.async {:mvn/version "1.6.681"}
        
        ;; Utilities
        medley/medley {:mvn/version "1.4.0"}
        camel-snake-kebab/camel-snake-kebab {:mvn/version "0.4.3"}
        
        ;; Schema validation
        metosin/malli {:mvn/version "0.13.0"}
        
        ;; Testing (for development)
        lambdaisland/kaocha {:mvn/version "1.87.1366"}
        org.clojure/test.check {:mvn/version "1.1.1"}
        mockery/mockery {:mvn/version "0.1.4"}}
 
 :aliases
 {:dev {:extra-paths ["dev" "test"]
        :extra-deps {org.clojure/tools.namespace {:mvn/version "1.4.4"}
                     criterium/criterium {:mvn/version "0.4.6"}
                     org.clojure/tools.trace {:mvn/version "0.7.11"}}}
  
  :test {:extra-paths ["test"]
         :extra-deps {lambdaisland/kaocha {:mvn/version "1.87.1366"}
                      org.clojure/test.check {:mvn/version "1.1.1"}
                      mockery/mockery {:mvn/version "0.1.4"}}}
  
  :repl {:extra-deps {nrepl/nrepl {:mvn/version "1.0.0"}
                      cider/cider-nrepl {:mvn/version "0.42.1"}}}
  
  :build {:deps {io.github.clojure/tools.build {:mvn/version "0.9.6"}}
          :ns-default build}
  
  :uberjar {:replace-deps {org.clojure/clojure {:mvn/version "1.11.1"}}
            :exec-fn hf.depstar/uberjar
            :exec-args {:aot true
                        :jar "target/litellm.jar"
                        :main-class litellm.main}}
  
  :outdated {:replace-deps {com.github.liquidz/antq {:mvn/version "RELEASE"}}
             :main-opts ["-m" "antq.core"]}}}
